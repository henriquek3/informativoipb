extends layouts/_layout.pug

block content
    div.ui.segment
        div(style="position: absolute;right: 20px;")
            div.ui.breadcrumb
                a.section(href="index.html")
                    i.home.icon
                div.divider /
                a.section Relatórios
                div.divider /
                div.active.section Ministerial

        div.ui.clearing

        h2.ui.floated.header
            | Relatório Ministerial
            div.sub.header
                | Relatório Ministerial. -> breve explicação da tela

        div.ui.clearing.divider
        p
        div.ui.top.attached.tabular.menu
            a.item(data-tab="first") Relatórios
            a.item.active(data-tab="second") Responder

        div.ui.bottom.attached.tab.segment(data-tab="first")
            table.ui.compact.selectable.celled.green.table
                thead
                    tr
                        th.one.wide Código
                        th.ten.wide Tipo Relatório
                        th.two.wide.center.aligned Data Inclusão
                        th.two.wide.center.aligned Ultima Alteração
                        th.two.wide.center.aligned Status
                        th.two.wide.center.aligned Ano

                tbody
                    tr
                        td 01
                        td RELATÓRIO MINISTERIAL
                        td 01/02/2017
                        td 20/02/2017
                        td Em Edição
                        td 2018
                    tr
                        td 02
                        td RELATÓRIO MINISTERIAL
                        td 01/05/2016
                        td 20/08/2016
                        td Importado
                        td 2017

        div.ui.bottom.attached.tab.segment.active(data-tab="second")
            div.ui.segments
                div.ui.green.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong Relatório do Ministro Presbiteriano

                div.ui.form.segment
                    div.fields
                        div.two.wide.field
                            label Ano
                            input(type="text", value="2018", disabled="")
                        div.two.wide.field
                            label Sínodo
                            input(type="text", value="SCA", disabled="")
                        div.two.wide.field
                            label Presbitério
                            input(type="text", value="PRON", disabled="")
                        div.eight.wide.field
                            label Igreja
                            input(type="text", value="IGREJA PRESBITERIANA LUZ E VIDA", disabled="")
                        div.two.wide.field
                            label Sigla
                            input(type="text", value="?????", disabled="")

            div.ui.segments
                div.ui.green.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong I - Identificação do Ministro

                div.ui.form.segment
                    div.fields
                        div.sixteen.wide.field
                            label Nome
                            input(type="text", name="nome" placeholder="Digite seu Nome" disabled="")
                    div.fields
                        div.eight.wide.field
                            label Nome do Pai
                            input(type="text", name="nome_pai" placeholder="Nome do Pai" disabled="")
                        div.eight.wide.field
                            label Nome da Mãe
                            input(type="text", name="nome_mae" placeholder="Nome da Mãe" disabled="")
                    div.fields
                        div.ui.calendar.bottom.left.three.wide.field
                            label Data de Nascimento
                            input.datepicker2(type="text" name="nascimento_data" placeholder="Data de Nascimento" disabled="")
                        div.five.wide.field
                            label Estado Natal
                            select.ui.fluid.search.dropdown(disabled="")
                                option
                                option Estado
                                option Estado
                                option Estado
                        div.eight.wide.field
                            label Cidade Natal
                            select.ui.fluid.search.dropdown(disabled="")
                                option
                                option Cidade
                                option Cidade
                                option Cidade
                    div.fields
                        div.four.wide.field
                            label RG
                            input(type="text", name="rg" placeholder="RG" disabled="")
                        div.four.wide.field
                            label Orgão Emissor
                            input(type="text", name="rg_emissor" placeholder="Orgão Emissor" disabled="")
                        div.four.wide.field
                            label CPF
                            input(type="text", name="cpf" placeholder="CPF" disabled="")
                        div.five.wide.field
                            label Estado Civil
                            select.ui.fluid.search.dropdown(disabled="")
                                option Casado
                                option Solteiro
                                option Viúvo
                                option Separado
                    div.fields
                        div.ten.wide.field
                            label Cônjuge
                            input(type="text", name="conjuge_nome" placeholder="Cônjuge" disabled="")
                        div.ui.calendar.bottom.left.four.wide.field
                            label Data de Nascimento
                            input.datepicker2(type="text" name="conjuge_nascimento" placeholder="Data de Nascimento do Cônjuge" disabled="")
                        div.two.wide.field
                            label Nº de Dependentes
                            input(type="text", name="dependentes" placeholder="Nº de Dependentes" disabled="")
                    div.fields
                        div.sixteen.wide.field
                            label Nome dos Dependentes
                            input(type="text", name="nome_filhos" placeholder="Nome dos Dependentes. OSB. use ; para separar os nomes" disabled="")
                    div.fields
                        div.six.wide.field
                            label Endereço
                            input(type="text" name="endereco" placeholder="Endereço" disabled="")
                        div.two.wide.field
                            label Número
                            input(type="text" name="endereco_nr" placeholder="Número" disabled="")
                        div.four.wide.field
                            label Complemento
                            input(type="text" name="endereco_complemento" placeholder="Complemento" disabled="")
                        div.four.wide.field
                            label Bairro
                            input(type="text" name="endereco_bairro" placeholder="Bairro" disabled="")
                    div.fields
                        div.four.wide.field
                            label Estado
                            select.ui.fluid.search.dropdown(disabled="")
                                option
                                option Estado
                                option Estado
                                option Estado
                        div.five.wide.field
                            label Cidade
                            select.ui.fluid.search.dropdown(disabled="")
                                option
                                option Cidade
                                option Cidade
                                option Cidade
                        div.two.wide.field
                            label CEP
                            input(type="text", name="cep" placeholder="CEP" disabled="")
                        div.two.wide.field
                            label Cx. Postal
                            input(type="text", name="cx_postal" placeholder="Caixa Postal" disabled="")
                        div.three.wide.field
                            label CEP Cx. Postal
                            input(type="text", name="cx_postal_cep" placeholder="CEP Cx. Postal" disabled="")
                    div.fields
                        div.three.wide.field
                            label Celular
                            input(type="text", name="telefone" placeholder="Celular" disabled="")
                        div.three.wide.field
                            label Telefone Fixo
                            input(type="text", name="telefone" placeholder="Telefone Fixo" disabled="")
                        div.three.wide.field
                            label Telefone da Igreja
                            input(type="text", name="telefone" placeholder="Telefone da Igreja" disabled="")
                        div.seven.wide.field
                            label E-mail
                            input(type="email" name="email" placeholder="E-Mail" disabled="")
                    div.fields
                        div.five.wide.field
                            label Condições de Moradia:
                            select.ui.fluid.search.dropdown
                                option
                                option Casa/Apto Pastoral
                                option Moradia Própria
                                option Financiada
                                option Moradia alugada paga pela Igreja
                                option Moradia alugada e paga pelo Ministro
                                option Moradia alugada Nos limites do campo
                                option Moradia alugada Fora do campo
                        div.three.wide.field
                            label Data de Ordenação:
                            input(type="text")
                        div.eight.wide.field(data-tooltip="Digite ou Selecione o Presbitério onde foi ordenado.")
                            label Presbitério
                            select.ui.fluid.search.dropdown
                                option
                                option Sul de Rondônia
                                option Vale do Rio Machado
                    div.fields
                        div.three.wide.field
                            label Dedicação ao Ministério:
                            select.ui.fluid.search.dropdown
                                option
                                option Integral
                                option Parcial
                        div.three.wide.field
                            label Férias
                            select.ui.fluid.search.dropdown
                                option
                                option Regulares
                                option Parciais
                                option Não teve
                        div.three.wide.field
                            label Côngruas
                            div.ui.labeled.input
                                div.ui.label R$
                                input(type="text")
                    div.fields.inline
                        div.three.wide.field(data-tooltip="Possui aposentadoria pública?")
                            label Aposentadoria pública?
                        div.three.wide.field
                            div.ui.radio.checkbox
                                input(name="aposentadoria_publica" type="radio")
                                label Sim
                            div.ui.radio.checkbox
                                input(name="aposentadoria_publica" type="radio" checked="checked")
                                label Não
                        div.three.wide.field(data-tooltip="Possui aposentadoria privada?")
                            label Aposentadoria privada?
                        div.three.wide.field
                            div.ui.radio.checkbox
                                input(name="aposentadoria_privada" type="radio")
                                label Sim
                            div.ui.radio.checkbox
                                input(name="aposentadoria_privada" type="radio" checked="checked")
                                label Não
                        div.two.wide.field(data-tooltip="Possui plano de saúde?")
                            label Plano de saúde?
                        div.two.wide.field
                            div.ui.radio.checkbox
                                input(name="plano_saude" type="radio")
                                label Sim
                            div.ui.radio.checkbox
                                input(name="plano_saude" type="radio" checked="checked")
                                label Não
                    div.fields.inline
                        div.five.wide.field
                            label Contribui para o INSS sobre o valor das Côngruas??
                        div.two.wide.field
                            div.ui.radio.checkbox
                                input(name="contribui_inss_congruas" type="radio")
                                label Sim
                            div.ui.radio.checkbox
                                input(name="contribui_inss_congruas" type="radio" checked="checked")
                                label Não
                        div.five.wide.field(data-tooltip="Qual o valor da contribuição para o INSS?")
                            label Contribuição INSS:
                            div.ui.labeled.input
                                div.ui.label R$
                                input(type="text")
                        div.two.wide.field(data-tooltip="Contribui para Previdência Privada?")
                            label Previdência Privada?
                        div.two.wide.field
                            div.ui.radio.checkbox
                                input(name="contribui_previdencia_privada" type="radio")
                                label Sim
                            div.ui.radio.checkbox
                                input(name="contribui_previdencia_privada" type="radio" checked="checked")
                                label Não

            div.ui.segments
                div.ui.green.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong II - Campo de Trabalho

                div.ui.form.segment
                    div.fields
                        div.eight.wide.field
                            label Igreja(s):
                            textarea(rows="2")
                        div.eight.wide.field
                            label Congregação(ões):
                            textarea(rows="2")

            div.ui.segments
                div.ui.green.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong III - Atuação Ministerial

                div.ui.form.segment
                    div.ui.green.ribbon.label(style="font-size:0.92857143em;") 1. DOUTRINAÇÃO


block specific-js
    script(src='js/app/jquery-validate-app.js')
    script(src="js/plugins/bootstrap-datepicker.min.js")
    script(src="js/plugins/bootstrap-datepicker.pt-BR.min.js")
    script(src="js/plugins/dataTables.min.js")
    script(src="js/plugins/sweetalert.min.js")
    script(src="js/app/relatorios-ministeriais-app.js")