extends ../layouts/_layout.pug

block content

    include ../includes/_messages

    div.ui.segment
        a.ui.right.floated.green.tiny.button(href='/cadastros/presbiterios/novo')
            i.plus.icon
            | Novo

        h3.ui.floated.header(style='padding-top: 6px;padding-left: 10px;')
            i.edit.outline.icon
        h1.ui.floated.header(style='margin-left: -10px;')
            | Cadastro de Presbitérios
            div.sub.header(style='margin-left: -40px;')
                | Visualize todos os presbitérios que estão cadastrados.

        div.ui.clearing.divider
        p
        table.ui.compact.selectable.celled.green.unstackable.sortable.table
            thead
                tr
                    th.eight.wide.center.aligned Nome
                    th.two.wide.center.aligned Sigla
                    th.two.wide.center.aligned Sínodo
                    th.three.wide.center.aligned Região
                    th.one.wide
            tbody
                | @forelse($resources as $rs)
                tr
                    td {{ $rs->nome }}
                    td {{ $rs->sigla }}
                    td {{ $rs->sinodo->nome }}
                    td {{ $rs->nome_regiao()}}
                    td.center.aligned(title='Editar Sínodo')
                        a.ui.icon.primary.button(href!="/cadastros/sinodos/{{$rs->id}}/editar")
                            i.pencil.alternate.icon
                | @empty
                tr
                    td(colspan='5') Nenhum registro encontrado.
                | @endforelse
            tfoot
                tr
                    th(colspan='5')
                        div.ui.right.floated.pagination.menu
                            | {{ $resources->links('pagination::semantic-ui') }}

block specific-js
    script(type='text/javascript').
        $('table').tablesort();