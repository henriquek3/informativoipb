extends layouts/_layout.pug

block content
    div.ui.segment
        div(style="position: absolute;right: 20px;")
            div.ui.breadcrumb
                a.section(href="index.html")
                    i.home.icon
                div.divider /
                a.section Relatórios
                div.divider /
                div.active.section Estatísticas

        div.ui.clearing

        h2.ui.floated.header
            | Relatório de Estatísticas
            div.sub.header
                | Relatório de Estatísticas. -> breve explicação da tela

        div.ui.clearing.divider
        p
        div.ui.top.attached.tabular.menu
            a.item(data-tab="first") Relatórios
            a.item.active(data-tab="second") Responder

        div.ui.bottom.attached.tab.segment(data-tab="first")
            table.ui.compact.selectable.celled.green.table
                thead
                    tr
                        th.one.wide Código
                        th.ten.wide Tipo Relatório
                        th.two.wide.center.aligned Data Inclusão
                        th.two.wide.center.aligned Ultima Alteração
                        th.two.wide.center.aligned Status
                        th.two.wide.center.aligned Ano

                tbody
                    tr
                        td 01
                        td RELATÓRIO ESTATÍSTICAS
                        td 11/02/2017
                        td 20/02/2017
                        td Em Edição
                        td 2018
                    tr
                        td 02
                        td RELATÓRIO ESTATÍSTICAS
                        td 11/05/2016
                        td 20/08/2016
                        td Importado
                        td 2017

        div.ui.bottom.attached.tab.segment.active(data-tab="second")
            div.ui.segments
                div.ui.blue.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong INFORMAÇÕES CADASTRAIS E ESTATÍSTICAS DE COMUNIDADE PRESBITERIANA

                div.ui.form.segment
                    div.fields
                        div.two.wide.field
                            label Ano
                            input(type="text", value="2018", disabled="")
                        div.two.wide.field
                            label Sínodo
                            input(type="text", value="SCA", disabled="")
                        div.two.wide.field
                            label Presbitério
                            input(type="text", value="PRON", disabled="")
                        div.eight.wide.field
                            label Igreja
                            input(type="text", value="IGREJA PRESBITERIANA LUZ E VIDA", disabled="")
                        div.two.wide.field
                            label Sigla
                            input(type="text", value="?????", disabled="")

            div.ui.segments
                div.ui.blue.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong I - Identificação da Igreja / Congregação Presbiterial

                div.ui.form.segment
                    div.fields
                        div.sixteen.wide.field
                            label Nome (Igreja/Congregação)
                            input(type="text", disabled="")

                    div.fields
                        div.eight.wide.field
                            label Endereço
                            input(type="text", disabled="")
                        div.two.wide.field
                            label Número
                            input(type="text", disabled="")
                        div.three.wide.field
                            label Complemento
                            input(type="text", disabled="")
                        div.three.wide.field
                            label Bairro
                            input(type="text", disabled="")

                    div.fields
                        div.four.wide.field
                            label Estado
                            select.ui.fluid.search.dropdown.disabled
                        div.four.wide.field
                            label Cidade
                            select.ui.fluid.search.dropdown.disabled
                        div.three.wide.field
                            label CEP
                            input(type="text", disabled="")
                        div.two.wide.field
                            label Cx. P
                            input(type="text", disabled="")
                        div.three.wide.field
                            label CEP Cx. P
                            input(type="text", disabled="")

                    div.fields
                        div.two.wide.field
                            label Telefone
                            input(type="text", disabled="")
                        div.four.wide.field
                            label E-Mail
                            input(type="text", disabled="")
                        div.four.wide.field
                            label HomePage
                            input(type="text", disabled="")
                        div.three.wide.field
                            label CNPJ
                            input(type="text", disabled="")
                        div.three.wide.field
                            label Data Organização
                            input(type="text", disabled="")

            div.ui.segments
                div.ui.blue.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong II - Estrutura da Comunidade Presbiteriana

                div.ui.form.segment
                    div.fields


            div.ui.segments
                div.ui.blue.segment(style="text-align: center; background-color: #F9FAFB")
                    p
                        strong INFORMAÇÕES SOBRE O PREENCHIMENTO

                div.ui.horizontal.segments
                    div.ui.segment
                        span
                            strong Usuário inclusão:
                        span
                            | &nbsp;
                            | Kallew Pavão
                            | &nbsp;
                        span(style="float: right;")
                            strong Data:
                            | &nbsp;
                            | 01/01/2018

                    div.ui.segment
                        span
                            strong Última alteração:
                        span
                            | &nbsp;
                            | Kallew Pavão
                            | &nbsp;
                        span(style="float: right;")
                            strong Data:
                            | &nbsp;
                            | 01/01/2018

                div.ui.segment
                    div.ui.toggle.checkbox(data-tooltip="Deixe AZUL caso tenha FINALIZADO este relatório.")
                        label Relatório Finalizado
                        input(type="checkbox", name="relatorio_finalizado")


            div.ui.clearing.divider

            div(style="text-align: center")
                button.ui.green.labeled.icon.button(type="submit")
                    i.plus.icon
                    | Gravar

                button.ui.reset.button(type="reset")
                    i.minus.icon
                    | Limpar

                button.ui.red.right.labeled.icon.button(type="button")
                    i.remove.icon
                    | Excluir



block specific-js
    script(src='js/app/jquery-validate-app.js')
    script(src="js/plugins/bootstrap-datepicker.min.js")
    script(src="js/plugins/bootstrap-datepicker.pt-BR.min.js")
    script(src="js/plugins/dataTables.min.js")
    script(src="js/plugins/sweetalert.min.js")
    script(src="js/app/relatorios-estatisticas-app.js")