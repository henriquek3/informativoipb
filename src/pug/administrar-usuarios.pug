extends layouts/_layout.pug

block content
    div.ui.segment
        div(style="position: absolute;right: 20px;")
            div.ui.breadcrumb
                a.section(href="inicio")
                    i.home.icon
                div.divider /
                a.section Configurações
                div.divider /
                div.active.section Administrar Usuário

        div.ui.clearing

        h2.ui.floated.header
            | Administrar Usuário
            div.sub.header
                | Administre os usuários de nível inferior

        div.ui.clearing.divider
        p
        div.ui.top.attached.tabular.menu
            a.item.active(data-tab="first") Cadastrar Usuário
            a.item(data-tab="second") Gerenciar Usuário

        div.ui.bottom.attached.tab.segment.active(data-tab="first")
            div.ui.form.segment
                div.inline.fields
                    div.five.wide.field
                        div.eight.wide.field
                            label Status do Usuário
                        div.eight.wide.field
                            div.ui.radio.checkbox
                                input(name="status" type="radio")
                                label Ativo
                            div.ui.radio.checkbox
                                input(name="status" type="radio" checked="checked")
                                label Inativo
                div.fields
                    div.ten.wide.field
                        label Nome
                        input(type="text")
                div.fields
                    div.ten.wide.field
                        label Login
                        input(type="text")
                div.fields
                    div.ten.wide.field
                        label Senha
                        input(type="text")
                div.fields
                    div.ten.wide.field
                        label E-mail
                        input(type="text")
                div.fields
                    div.ten.wide.field
                        label Presbitério Vinculado
                        select.ui.fluid.search.dropdown
                            option Presbitério Sul
                            option Norte Presbitério
                            option Centro Presbitério
                div.fields
                    div.ten.wide.field
                        label Nível
                        select.ui.fluid.search.dropdown
                            option Comum
                            option Superior
                div.fields
                    div.ten.wide.field
                        label Perfil
                        select.ui.fluid.search.dropdown
                            option Secretário da Igreja
                            option Secretário do Presbitério
                            option Secretário do Sínodo
                            option Secretário do Suprem
                            option Supervisão Geral


                div.ui.clearing.divider

                div(style="text-align: center")
                    button.ui.green.labeled.icon.button(type="submit")
                        i.plus.icon
                        | Gravar

                    button.ui.reset.button(type="reset")
                        i.minus.icon
                        | Limpar

                    button.ui.red.right.labeled.icon.button(type="button")
                        i.remove.icon
                        | Excluir



        div.ui.bottom.attached.tab.segment(data-tab="second")
            table.ui.compact.selectable.celled.green.unstackable.table
                thead
                    tr
                        th.one.wide Código
                        th.ten.wide Usuário
                        th.two.wide.center.aligned Editar
                        th.two.wide.center.aligned Excluir

                tbody
                    tr
                        td 01
                        td Antônio José
                        td
                            i.edit.icon.green
                            | Alterar
                        td
                            i.ban.icon.red
                            | Bloquear
                    tr
                        td 02
                        td Pedro Lucas
                        td
                            i.edit.icon.green
                            | Alterar
                        td
                            i.ban.icon.red
                            | Bloquear











block specific-js
    script(src='js/app/jquery-validate-app.js')
    script(src="js/plugins/bootstrap-datepicker.min.js")
    script(src="js/plugins/bootstrap-datepicker.pt-BR.min.js")
    script(src="js/plugins/dataTables.min.js")
    script(src="js/plugins/sweetalert.min.js")
    script(src="js/app/administrar-usuarios-app.js")
