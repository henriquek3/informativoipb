extends layouts/_layout.pug

block content
    div.ui.segment
        div(style="position: absolute;right: 20px;")
            div.ui.breadcrumb
                a.section(href="index.html")
                    i.home.icon
                div.divider /
                a.section Cadastros
                div.divider /
                div.active.section Igrejas

        div.ui.clearing

        h2.ui.floated.header
            | Cadastro de Ministros
            div.sub.header
                | Cadastre um Ministro. -> breve explicação da tela


        div.ui.clearing.divider
        p
        div.ui.top.attached.tabular.menu
            a.item.active(data-tab="first") Igrejas
            a.item(data-tab="second") Cadastrar
        div.ui.bottom.attached.tab.segment.active(data-tab="first")
            table.ui.compact.selectable.celled.green.table(id="tbl_presbiteros")
                thead
                    tr
                        th.one.wide Código
                        th.six.wide Nome
                        th.five.wide Igreja
                        th.two.wide.center.aligned Presbitério
                        th.two.wide.center.aligned Sínodo
                tbody(id="tbody_presbiteros")
                    tr
                        td.center.aligned 01
                        td Alessandro Santareli
                        td Primeira Igreja de Cacoal
                        td.center.aligned PRON
                        td.center.aligned SCA

        div.ui.bottom.attached.tab.segment(data-tab="second")
            form(id="cadastros_presbiteros", name="cadastros_presbiteros")
                div.ui.form
                    div.fields
                        div.five.wide.field
                            label Sínodo
                            select.ui.search.dropdown
                                option
                                option(value="1", selected="true") SCA / SÍNODO CENTRO AMÉRICA

                        div.five.wide.field
                            label Presbitério
                            select.ui.search.dropdown
                                option
                                option(value="1", selected="true") PRON / PRESBITÉRIO DE RONDONÓPOLIS

                        div.six.wide.field
                            label Igreja
                            select.ui.search.dropdown
                                option
                                option(value="1", selected="") IGREJA PRESBITERIANA LUZ E VIDA

                    div.fields
                        div.sixteen.wide.field
                            label Nome
                            input(type="text", name="nome" placeholder="Digite seu Nome")
                    div.fields
                        div.eight.wide.field
                            label Nome do Pai
                            input(type="text", name="nome_pai" placeholder="Nome do Pai")
                        div.eight.wide.field
                            label Nome da Mãe
                            input(type="text", name="nome_mae" placeholder="Nome da Mãe")
                    div.fields
                        div.ui.calendar.bottom.left.three.wide.field
                            label Data de Nascimento
                            input.datepicker2(type="text" name="nascimento_data" placeholder="Data de Nascimento")
                        div.five.wide.field
                            label Estado
                            select.ui.fluid.search.dropdown
                                option
                                option Estado
                                option Estado
                                option Estado
                        div.eight.wide.field
                            label Cidade
                            select.ui.fluid.search.dropdown
                                option
                                option Cidade
                                option Cidade
                                option Cidade
                    div.fields
                        div.four.wide.field
                            label RG
                            input(type="text", name="rg" placeholder="RG")
                        div.four.wide.field
                            label Orgão Emissor
                            input(type="text", name="rg_emissor" placeholder="Orgão Emissor")
                        div.four.wide.field
                            label CPF
                            input(type="text", name="cpf" placeholder="CPF")
                        div.five.wide.field
                            label Estado Civil
                            select.ui.fluid.search.dropdown
                                option Casado
                                option Solteiro
                                option Viúvo
                                option Separado
                    div.fields
                        div.ten.wide.field
                            label Cônjuge
                            input(type="text", name="conjuge_nome" placeholder="Cônjuge")
                        div.ui.calendar.bottom.left.four.wide.field
                            label Data de Nascimento
                            input.datepicker2(type="text" name="conjuge_nascimento" placeholder="Data de Nascimento do Cônjuge")
                        div.two.wide.field
                            label Nº de Dependentes
                            input(type="text", name="dependentes" placeholder="Nº de Dependentes")
                    div.fields
                        div.sixteen.wide.field
                            label Nome dos Dependentes
                            input(type="text", name="nome_filhos" placeholder="Nome dos Dependentes. OSB. use ; para separar os nomes")

                    div.fields
                        div.six.wide.field
                            label Endereço
                            input(type="text" name="endereco" placeholder="Endereço")
                        div.two.wide.field
                            label Número
                            input(type="text" name="endereco_nr" placeholder="Número")
                        div.four.wide.field
                            label Complemento
                            input(type="text" name="endereco_complemento" placeholder="Complemento")
                        div.four.wide.field
                            label Bairro
                            input(type="text" name="endereco_bairro" placeholder="Bairro")
                    div.fields
                        div.four.wide.field
                            label Estado
                            select.ui.fluid.search.dropdown
                                option
                                option Estado
                                option Estado
                                option Estado
                        div.five.wide.field
                            label Cidade
                            select.ui.fluid.search.dropdown
                                option
                                option Cidade
                                option Cidade
                                option Cidade

                        div.two.wide.field
                            label CEP
                            input(type="text", name="cep" placeholder="CEP")
                        div.two.wide.field
                            label Cx. Postal
                            input(type="text", name="cx_postal" placeholder="Caixa Postal")
                        div.three.wide.field
                            label CEP Cx. Postal
                            input(type="text", name="cx_postal_cep" placeholder="CEP Cx. Postal")
                    div.fields
                        div.three.wide.field
                            label Celular
                            input(type="text", name="telefone" placeholder="Celular")
                        div.three.wide.field
                            label Telefone Fixo
                            input(type="text", name="telefone" placeholder="Telefone Fixo")
                        div.three.wide.field
                            label Telefone da Igreja
                            input(type="text", name="telefone" placeholder="Telefone da Igreja")
                        div.seven.wide.field
                            label E-mail
                            input(type="email" name="email" placeholder="E-Mail")

                div.ui.segments
                    div.ui.horizontal.segments
                        div.ui.segment
                            span(style="color: lightslategray;")
                                strong Usuário inclusão:
                            span(style="color: lightslategray;")
                                | &nbsp;
                                | Kallew Pavão
                                | &nbsp;
                            span(style="float: right;color: lightslategray;")
                                strong Data:
                                | &nbsp;
                                | 01/01/2018

                        div.ui.segment
                            span(style="color: lightslategray;")
                                strong Última alteração:
                            span(style="color: lightslategray;")
                                | &nbsp;
                                | Kallew Pavão
                                | &nbsp;
                            span(style="float: right;color: lightslategray;")
                                strong Data:
                                | &nbsp;
                                | 01/01/2018

                div.ui.clearing.divider

                div(style="text-align: center")
                    button.ui.green.labeled.icon.button(type="submit")
                        i.plus.icon
                        | Gravar

                    button.ui.reset.button(type="reset")
                        i.minus.icon
                        | Limpar

                    button.ui.red.right.labeled.icon.button(type="button")
                        i.remove.icon
                        | Excluir

        div.ui.bottom.attached.tab.segment(data-tab="third")
            form(id="cadastros_congregacoes", name="cadastros_congregacoes")
                div.ui.form
                    div.fields
                        div.eight.wide.disabled.field
                            label Sínodo
                            select.ui.fluid.search.dropdown
                                option Sinodo
                                option Sinodo
                                option Sinodo
                        div.eight.wide.disabled.field
                            label Igreja
                            select.ui.fluid.search.dropdown
                                option Sinodo
                                option Sinodo
                                option Sinodo
                    div.fields
                        div.eight.wide.field
                            label Estado
                            select.ui.fluid.search.dropdown
                                option
                                option Estado
                                option Estado
                                option Estado
                        div.eight.wide.field
                            label Cidade
                            select.ui.fluid.search.dropdown
                                option
                                option Cidade
                                option Cidade
                                option Cidade
                    div.fields
                        div.ten.wide.field
                            label Nome
                            input(type="text", name="nome" placeholder="Digite seu Nome")
                        div.three.wide.field
                            label CNPJ
                            input(type="text" name="cnpj" placeholder="CNPJ")
                        div.ui.calendar.bottom.left.three.wide.field
                            label Organização
                            input.datepicker2(type="text" name="data_organizacao" placeholder="Data de Organização")
                    div.fields
                        div.six.wide.field
                            label Endereço
                            input(type="text" name="endereco" placeholder="Endereço")
                        div.two.wide.field
                            label Número
                            input(type="text" name="endereco_nr" placeholder="Número")
                        div.four.wide.field
                            label Complemento
                            input(type="text" name="endereco_complemento" placeholder="Complemento")
                        div.four.wide.field
                            label Bairro
                            input(type="text" name="endereco_bairro" placeholder="Bairro")
                    div.fields
                        div.eight.wide.field
                            label E-mail
                            input(type="email" name="email" placeholder="E-Mail")
                        div.eight.wide.field
                            label Homepage
                            input(type="url" name="website" placeholder="Web Site")
                div(style="text-align: center")
                    button.ui.green.labeled.icon.button(type="submit")
                        i.plus.icon
                        | Gravar

                    button.ui.reset.button(type="reset")
                        i.minus.icon
                        | Limpar

                    button.ui.red.right.labeled.icon.button(type="button")
                        i.remove.icon
                        | Excluir

